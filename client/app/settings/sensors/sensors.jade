extends ../../main/layout.jade

block content
  .row(ng-controller='SensorsController')
    .col-xs-7
      .box.box-warning
        .box-header
          h3.box-title Sensor Definitions
          .box-tools
            .input-group
              input.form-control.input-sm.pull-right(name='table_search', type='text', placeholder='Search', style="width:150px;")
              .input-group-btn
                button.btn.btn-sm.btn-default
                  i.fa.fa-search
        .box-body.table-responsive.no-padding
          table.table.table-hover
            tbody
              tr
                th Name
                th Description
                th Status
              tr(ng-repeat='sensor in data | orderBy:"name"')
                td {{sensor.name}}
                td {{sensor.desc}}
                td
                  span.label.label-success(ng-show='sensor.active') Enabled
                  span.label.label-warning(ng-hide='sensor.active') Disabled
    .col-xs-5
      .box.box-primary
        .box-header
          h3.box-title Create Sensor
        form(name='form3', ng-submit='addSensor(form3)', novalidate='')
          .box-body
            .form-group
              label Name
              input.form-control(type='text', name='sensorName' placeholder='Enter Sensor Name', ng-model='sensorName')
            .form-group
              label Description
              input.form-control(type='text', name='sensorDesc' placeholder='Description', ng-model='sensorDesc')

          .box-footer
            button.btn.btn-primary(type='submit') Submit

