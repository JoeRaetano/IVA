extends ../../main/layout.jade
block content
  .row(ng-controller='CollectionController')
    .col-md-7.col-xs-12
      .box.box-warning
        .box-header
          h3.box-title Collection Definition
        form(name='editForm', ng-submit='editRecord(editForm)', novalidate='')
          .box-body.table-responsive
            .form-group
              label Make
              input.form-control(type='text', name='vehicleMake' placeholder='Enter Vehicle Make', ng-model='currentItem.make', ng-disabled='!inEditMode')
            .form-group
              label Model
              input.form-control(type='text', name='vehicleModel' placeholder='Enter Vehicle Model', ng-model='currentItem.model', ng-disabled='!inEditMode')
            .form-group
              label Year
              input.form-control(type='text', name='vehicleYear' placeholder='Enter Vehicle Year', ng-model='currentItem.year', ng-disabled='!inEditMode')
            .form-group
              label Description
              input.form-control(type='text', name='collectionDescription' placeholder='Enter Description', ng-model='currentItem.desc', ng-disabled='!inEditMode')
            .form-group
              label Status
              br
              input(type='checkbox', ng-model='currentItem.active', ng-disabled='!inEditMode')
              = " "
              span.label.label-success(ng-show='currentItem.active')  Upload
              span.label.label-warning(ng-hide='currentItem.active')  Not Uploaded
          .box-footer
            //- buttons for display mode
            button.btn.btn-default(type='button', ng-click='toggleEditMode()', ng-hide='inEditMode')
              i.fa.fa-edit
              |  Edit
            button.btn.btn-default(type='button', ng-click='requestDelete(currentItem)', ng-hide='inEditMode')
              i.fa.fa-remove
              |  Delete
            button.btn.btn-default(type='button', ng-click='returnToList()', ng-hide='inEditMode')
              |  Back to List
            //- buttons for edit mode
            button.btn.btn-primary(type='submit', ng-show='inEditMode')
              i.fa.fa-save
              |  Save
            button.btn.btn-default(type='button', ng-click='toggleEditMode()', ng-show='inEditMode') Cancel
    .col-md-5.col-xs-12
      .box.box-primary
        .box-header
          h3.box-title Create Collection
        form(name='addForm', ng-submit='addRecord(addForm)', novalidate='')
          .box-body
            .form-group
              label Make
              input.form-control(type='text', name='vehicleMake' placeholder='Enter Vehicle Make', ng-model='vehicleMake', required)
              .form-group
              label Model
              input.form-control(type='text', name='vehicleModel' placeholder='Enter Vehicle Model', ng-model='vehicleModel')
              .form-group
              label Year
              input.form-control(type='text', name='vehicleYear' placeholder='Enter Vehicle Year', ng-model='vehicleYear')
              .form-group
              label Description
              input.form-control(type='text', name='collectionDesc' placeholder='Enter Description', ng-model='collectionDesc')
          .box-footer
            button.btn.btn-primary(type='submit',ng-disabled='addForm.$invalid')
              i.fa.fa-plus-square-o
              |  Create
